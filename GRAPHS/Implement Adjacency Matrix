// <---------------Implement adjecency matrix--------------------->
#include<iostream>
using namespace std; 
#define vertex 6

// initialize matrix with zero
void initialiaztionOfMatrix(int adjMatrix[vertex][vertex]){
	for(int i=0;i<vertex;i++){
		for(int j=0;j<vertex;j++){
			adjMatrix[i][j]=0;
		}
	}
}

// add edge
void addEdge(int adjMatrix[vertex][vertex],int u,int v){
	 // Mark the edge between vertices u and v as 1
    adjMatrix[u][v] = 1;
    // For undirected graph, mark opposite edge as well
    adjMatrix[v][u] = 1;
}

// printing the matrix
void printMatrix(int adjMatrix[vertex][vertex]){
	for(int i=0;i<vertex;i++){
		for(int j=0;j<vertex;j++){
			cout<<adjMatrix[i][j]<<" ";
		}
		cout<<endl;
	}
}

int main(){
	int adjMatrix[vertex][vertex];
	
	// initialize matrix
	initialiaztionOfMatrix(adjMatrix);
	
	
	addEdge(adjMatrix,0,3);
	addEdge(adjMatrix,0,4);
	addEdge(adjMatrix,1,2);
	addEdge(adjMatrix,1,4);
	addEdge(adjMatrix,1,5);
	addEdge(adjMatrix,2,3);
	addEdge(adjMatrix,2,5);
	addEdge(adjMatrix,3,5);
	addEdge(adjMatrix,4,5);
	
	
	// printing matrix
	printMatrix(adjMatrix);
}
