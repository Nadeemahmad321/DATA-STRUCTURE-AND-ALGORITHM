#include<iostream>
#include<stack>
using namespace std;
int main(){
	//creation of stack
	stack<int> s;
	
    // push element in stack
    s.push(2);
    s.push(3);
    s.push(4);
    
    
    // peek operation
    cout<<"Top element of stack is:"<<s.top()<<endl;
    
    // pop element from stack 
    s.pop();    // after this operation 4 is popped from stack
    cout<<"Top element of stack is:"<<s.top()<<endl;
    
    // size of stack
    cout<<"size of stack is:"<<s.size()<<endl;
    
    //checking stack is empty or not
	if(s.empty()){
		cout<<"stack is epmty"<<endl;
	}
	else{
		cout<<"stack is not empty"<<endl;
	}	
}
